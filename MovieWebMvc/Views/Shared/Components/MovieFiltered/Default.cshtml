<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Imdb puanına göre listele
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="GetAllMovies">
        <input type="hidden" name="movieId" value="@(Context.Request.Query["movieId"])" />

        <div class="form-group my-2">
            <input class="form-control w-25" name="MinRate" placeholder="En Az" />
        </div>

        <div class="form-group my-2">
            <input class="form-control w-25" name="MaxRate" placeholder="En Fazla" />
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="bi bi-filter-circle-fill"></i>
                Filtreyi uygula
                </button>
        </div>
    </form>
</div>