@model EntityLayer.Comments
<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="UpdateComment" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CommentText"></label>
        <input asp-for="CommentText" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Tittle"></label>
        <input asp-for="Tittle" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
        </div>
    </div>
</form>